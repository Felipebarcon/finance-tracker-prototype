<div class="container">
  <h1 class="mt-3">Friends</h1>

  <div class="search-area mb-3">
    <h3>Search Friends</h3>
    <%= form_tag search_friend_path, remote: true, method: :get do %>
      <div class="form-group row">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :friend, params[:firend], placeholder: "Friend name", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if !@friends.empty? %>
    <%= render 'friends/list' %>
  <% end %>
</div>
